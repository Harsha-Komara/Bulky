
@model List<Product>
<div class="card shadow my-4 border-0">

    <div class="card-header bg-secondary bg-gradient ml-0 py-3">
        <div class="row">
            <div class="col-12 text-center">
                <h2 class="text-white">Products List</h2>
            </div>
        </div>
    </div>

    <div class="card-body p-4">
        <div class="row pb-3">
            <div class="col-12 text-end">
                <a class="btn btn-primary text-white" asp-controller="Product" asp-action="Create">
                    <i class="bi bi-plus-circle"></i> Add Product
                </a>
            </div>
        </div>
        
        <table id="ProductData" class="table table-striped table-bordered">
            <thead>
                <tr>
                    <th>
                        S.no
                    </th> 
                    <th>
                        Title
                    </th>
                    <th>
                        ISBN
                    </th>
                    <th>
                        Author
                    </th>
                    <th>
                        Price
                    </th>
                    <th>
                        Category
                    </th>
                    <th>

                    </th>
                    <th>

                    </th>
                </tr>
            </thead>
        </table>
    </div>
</div>

@section Scripts{
    <script src="~/js/Product.js"></script>
}

@model List<Category>

<div class="card shadow mt-4 border-0">

    <div class="card-header bg-secondary bg-gradient ml-0 py-3">
        <div class="row">
            <div class="col-12 text-center">
                <h2 class="text-white">Category List</h2>
            </div>
        </div>
    </div>

    <div class="card-body p-4">
        <div class="row pb-3">
            <div class="col-12 text-end">
                <a class="btn btn-primary text-white" asp-controller="Category" asp-action="Create">
                    <i class="bi bi-plus-circle"></i> Add Category
                </a>
            </div>
        </div>

        <table class="table table-striped table-bordered">
            <thead>
                <tr>
                    <th>
                        Category
                    </th>
                    <th>
                        Display Order
                    </th>
                </tr>
            </thead>
            <tbody>
                @foreach (Category obj in Model.OrderBy(a => a.DisplayOrder))
                {
                    <tr>
                        <td>
                            @obj.Name
                        </td>
                        <td>
                            @obj.DisplayOrder
                        </td>
                        <td class="text-center"><a class="text-light-emphasis" asp-action="Edit" asp-route-id="@obj.Id"><i class="bi bi-pencil-square"></i></a></td>
                        <td class="text-center"><a class="text-danger" asp-action="Delete" asp-route-id="@obj.Id"><i class="bi bi-trash3"></i></a></td>
                    </tr>
                }
            </tbody>
        </table>
    </div>

</div>
@model List<Company>
<div class="card shadow my-4 border-0">

    <div class="card-header bg-secondary bg-gradient ml-0 py-3">
        <div class="row">
            <div class="col-12 text-center">
                <h2 class="text-white">Companies List</h2>
            </div>
        </div>
    </div>

    <div class="card-body p-4">
        <div class="row pb-3">
            <div class="col-12 text-end">
                <a class="btn btn-primary text-white" asp-controller="Company" asp-action="Create">
                    <i class="bi bi-plus-circle"></i> Add Company
                </a>
            </div>
        </div>

        <table id="CompanyData" class="table table-striped table-bordered">
            <thead>
                <tr>
                    <th>
                        S.no
                    </th>
                    <th>
                        Company Name
                    </th>
                    <th>
                        City
                    </th>
                    <th>
                        State
                    </th>
                    <th>
                        Postal Code
                    </th>
                    <th>
                        Phone Number
                    </th>
                    <th>

                    </th>
                    <th>

                    </th>
                </tr>
            </thead>
        </table>
    </div>
</div>

@section Scripts {
    <script src="~/js/Company.js"></script>
}